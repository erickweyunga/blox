{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }